:root{
  --c1:#FFE08C; --c2:#FF9EC7; --c3:#9BE8FF; --c4:#B6FFB3;
  --ink:#121216; --ink-2:#2a2a30; --muted:#6b7280;
  --radius:18px; --shadow:0 10px 30px rgba(0,0,0,.08);
}
*{box-sizing:border-box} html,body,#root{height:100%} html,body{margin:0}
body{
  font:16px/1.45 "Rubik",system-ui,Segoe UI,Roboto,Inter,Arial,sans-serif;
  color:var(--ink);
  background:linear-gradient(160deg,var(--c1),var(--c2),var(--c3),var(--c4)) fixed;
  background-size:200% 200%;
}
@media (prefers-reduced-motion:no-preference){
  body{animation:candy 24s linear infinite alternate}
}
@keyframes candy{0%{background-position:0 0}100%{background-position:100% 100%}}
a{color:#0E8EDC;text-decoration:none} a:hover{text-decoration:underline}
.wrapper{max-width:1200px;margin-inline:auto;padding:48px 24px}

/* NAV */
.nav{
  position:sticky; top:16px; z-index:50; max-width:1180px; margin:12px auto 0;
  display:flex; align-items:center; justify-content:space-between; gap:16px;
  padding:12px 16px; border-radius:20px; backdrop-filter:blur(10px);
  background:rgba(255,255,255,.65); border:1px solid rgba(255,255,255,.5); box-shadow:var(--shadow);
}
.brand{display:flex;align-items:center;gap:8px;font-weight:900;letter-spacing:.5px}
.brand b{color:#05c3a7}
.nav ul{display:flex;gap:16px;margin:0;padding:0;list-style:none}
.nav a{display:inline-flex;align-items:center;gap:8px;padding:10px 14px;border-radius:12px;color:var(--ink);font-weight:700}
.nav a:hover{background:rgba(0,0,0,.06)}

/* HERO */
.hero{padding:90px 0 40px}
.badge{display:inline-flex;gap:8px;align-items:center;padding:8px 14px;border-radius:999px;background:rgba(255,255,255,.75);border:1px solid rgba(0,0,0,.06);box-shadow:var(--shadow)}
.hero h1{margin:22px 0 10px;font-weight:900;letter-spacing:.5px;line-height:1.06;font-size:clamp(36px,5vw,68px);background:linear-gradient(90deg,#2b6aff,#a43dff,#00c2a8);-webkit-background-clip:text;background-clip:text;color:transparent}
.hero p{max-width:760px;color:var(--muted);font-size:18px;margin:0 0 26px}
.btn-row{display:flex;gap:14px;flex-wrap:wrap}
.btn{display:inline-flex;gap:10px;align-items:center;padding:12px 18px;border-radius:999px;border:0;cursor:pointer;font-weight:900;letter-spacing:.2px;box-shadow:var(--shadow);transition:transform .12s ease, box-shadow .12s ease}
.btn:hover{transform:translateY(-2px)}
.btn-primary{background:linear-gradient(90deg,#12CC9A,#2b6aff);color:#fff}
.btn-ghost{background:#fff;color:var(--ink)}

/* STATS */
.stats{display:grid;grid-template-columns:repeat(3,1fr);gap:18px;margin:40px 0}
.stat{background:rgba(255,255,255,.8);border:1px solid rgba(0,0,0,.05);border-radius:var(--radius);padding:22px;text-align:center;box-shadow:var(--shadow)}
.stat b{display:block;font-size:clamp(28px,4vw,40px)} .stat span{color:var(--muted);font-weight:700}

/* SECTION */
.section-title{margin:34px 0 12px;color:#0e0f11;font-weight:900;letter-spacing:.4px}

/* TILES/CARDS */
.tiles{display:grid;grid-template-columns:repeat(4,1fr);gap:18px;margin-top:12px}
.tile{background:rgba(255,255,255,.88);border:1px solid rgba(0,0,0,.05);border-radius:22px;padding:26px;box-shadow:var(--shadow)}
.tile h4{margin:0 0 8px;font-size:18px;display:flex;align-items:center;gap:10px}
.tile p{margin:0;color:var(--muted)}

.grid{display:grid;grid-template-columns:repeat(3,1fr);gap:18px}
.card{background:#fff;border:1px solid rgba(0,0,0,.05);border-radius:22px;box-shadow:var(--shadow);padding:18px;display:flex;gap:12px}
.card img{width:110px;height:90px;border-radius:14px;object-fit:cover}
.card h3{margin:0;font-size:18px} .card p{margin:6px 0 0;color:var(--muted)}
.meta{display:flex;gap:10px;flex-wrap:wrap;color:var(--muted);font-size:13px;margin-top:6px}
.tag{background:rgba(0,0,0,.05);padding:4px 8px;border-radius:999px}

/* RATING */
.stars{color:#FFB703;font-size:14px}

/* LIST FILTERS */
.filters{display:flex;gap:10px;flex-wrap:wrap;margin:10px 0 16px}
.input, .select{padding:10px 12px;border-radius:12px;border:1px solid rgba(0,0,0,.12);background:rgba(255,255,255,.9)}
.input{min-width:240px}

/* FOOTER + SHORTLIST */
.footer{padding:28px 0;color:var(--muted);text-align:center}
.shortlist, .shortlist *{font-family:inherit}
.shortlist{position:fixed;right:16px;bottom:16px;border-radius:16px;background:rgba(255,255,255,.9);box-shadow:var(--shadow);border:1px solid rgba(0,0,0,.05);padding:10px 14px;font-size:14px;color:var(--ink-2)}
.shortlist a{font-weight:800}

/* RESPONSIVE */
@media (max-width:980px){ .stats{grid-template-columns:1fr} .tiles{grid-template-columns:repeat(2,1fr)} .grid{grid-template-columns:1fr 1fr} }
@media (max-width:620px){ .tiles,.grid{grid-template-columns:1fr} }
